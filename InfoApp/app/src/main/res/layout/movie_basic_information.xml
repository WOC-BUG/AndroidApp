<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--  电影海报  -->
        <ImageView
            android:id="@+id/moviePoster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/movie2" />

        <!--  电影标题  -->
        <TextView
            android:id="@+id/movieTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="MovieTitle"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/moviePoster"
            app:layout_constraintTop_toTopOf="@+id/moviePoster"
            tools:ignore="MissingConstraints" />

        <!--  电影类型  -->
        <TextView
            android:id="@+id/movieType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MovieType"
            android:textSize="20sp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@+id/movieTitle"
            app:layout_constraintStart_toEndOf="@+id/moviePoster" />

        <!--  电影信息  -->
        <TextView
            android:id="@+id/movieInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MovieInformation"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/checkStar"
            app:layout_constraintStart_toEndOf="@+id/moviePoster"
            app:layout_constraintTop_toBottomOf="@+id/movieType" />

        <!--  电影评分  -->
        <TextView
            android:id="@+id/movieScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MovieScore"
            app:layout_constraintBottom_toBottomOf="@+id/checkStar"
            app:layout_constraintStart_toStartOf="@+id/moviePoster"
            app:layout_constraintTop_toBottomOf="@+id/moviePoster"
            tools:ignore="MissingConstraints" />

        <!--  收藏选项  -->
        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/checkStar"
            style="@style/star"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintEnd_toEndOf="@+id/moviePoster"
            app:layout_constraintTop_toBottomOf="@+id/moviePoster" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="10dp"
        android:background="#535353"/>

</LinearLayout>